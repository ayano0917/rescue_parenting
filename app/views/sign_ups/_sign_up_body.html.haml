%main.sign_up_main
  %section.sign_up_block
    .sign_up_container
      %h2.sign_up_head 保育者登録
      = form_with model: @childMinder, class: :child_minder_form do |ch|
        .minder_icon
          %label 保育者アイコン
          =ch.file_field :image, class: "minder_icon__form"
        .minder_introduction
          %label 紹介文
          =ch.text_field :child_minder_introduction, placeholder: '例)紹介文',class: "minder_introduction__form"
        .minder_name
          %label ニックネーム
          =ch.text_field :child_minder_nickname, placeholder: '例)ホームさん',class: "minder_name__form"
        .minder_gender
          %label 性別
          =ch.collection_select :gender_id, Gender.all, :id, :name, {prompt: '--'}
        .minder_experinece
          %label 経験年数
          = ch.collection_select :years_of_experience_id, YearsOfExperience.all, :id, :name, {prompt: "--"}
        = ch.submit"送信する", class: "child_minder-submit"
